<div class="row">
  <% recipes.each do |recipe| %>
    <div class="row">
      <%= link_to recipe_path(recipe) do %>
        <%= attachment_image_tag recipe, :recipe_image, :fill, 300, 300, fallback: "no_image.png", size: "300x300" %>
      <% end %>
    </div>
    <div class="row">
      <%= link_to recipe_path(recipe) do %>
        <%= recipe.recipe_name %>
      <% end %>
    </div>
  <% end %>
  <%= paginate recipes %>
</div>